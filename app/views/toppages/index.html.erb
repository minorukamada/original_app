<ul class="list-unstyled m-0 mb-4" id="flex-container">
  <% @posts_header.each do |post| %>
    <li class="flex-container-item">
      <%= link_to post do %>
        <% if post.image? %>
          <%= image_tag post.image.url %>
        <% elsif %>
          <%= image_tag ('/no_post_image.png') %>
        <% end %>
      <% end %>
      <p class="p-2"><%=post.title %></p>
    </li>
  <% end %>
</ul>

<div class="toppage">
  <div class="toppage-post">
    <div class="toppage-top">
      <h5>新着投稿</h5>
      <%= link_to 'もっと見る', posts_path %>
    </div>
    <%= render 'posts/posts', posts: @posts %>
  </div>
  <div class="toppage-user">
    <div class="toppage-top">
      <h5>おすすめユーザー</h5>
      <%= link_to 'もっと見る', users_path %>
    </div>
    <%= render 'users/users', users: @users %>
  </div>
</div>