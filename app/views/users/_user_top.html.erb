<div class="user-left-image">
  <div class="trim-image-to-circle-lg m-0">
    <% if @user.image? %>
      <%= image_tag @user.image.url %>
    <% elsif %>
      <%= image_tag ('/no_user_image.png') %>
    <% end %>
  </div>
</div>
<div class="user-left-content">
  <h2><%= @user.name %></h2>
  <%= render 'relationships/follow_button', user: @user %>
  <p class="pt-1"><%= @user.introduction %></p>
  <%= render 'users/user_edit_button', user: @user %>
</div>