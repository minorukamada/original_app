<div class="wrapper">
  <div class="user-left">
    <%= render 'users/user_top' %>
  </div>
  <div class="user-right">
    <%= render 'users/items'%>
    <% if @user.posts.count > 0  %>
      <%= render 'posts/posts', posts: @posts %>
    <% else %>
      <p class="mt-3 pt-3 pb-3 no-posts">投稿はありません。</p>
    <% end %>
  </div>
</div>