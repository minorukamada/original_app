<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media mb-1">
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
            <p><%= link_to user.name, user_path(user) %></p>
          </div>
        </div>
        <%= render 'relationships/follow_button', user: user %>
      </li>
    <% end %>
  </ul>
  <!--<%= paginate users %>-->
<% end %>