<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media p-2" id="user-<%= user.id %>">
        <%= render 'users/user_image', user: user %>
        <div class="media-body pl-2">
          <h5 class="mt-0"><%= user.name %></h5>
          <p class="mt-0"><%= user.introduction %></p>
          <div class="d-flex justify-content-between">
            <div class="d-flex justify-content-between">
              <p class="m-0"><small class="text-muted">記事数 <i class="fas fa-book-open fa-fw"></i> <%= user.posts.count %></small></p>
              <p class="m-0 ml-3"><small class="text-muted">フォロワー数 <i class="fas fa-users fa-fw"></i> <%= user.followers.count %></small></p>
            </div>
          </div>
          <div class="toppage-follow-button"><%= render 'relationships/follow_button', user: user %></div>
        </div>
      </li>
      <hr class="m-0">
    <% end %>
  </ul>
  <!--<%= paginate users, :param_name => 'user_page' %>-->
<% end %>