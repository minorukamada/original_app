<% if logged_in? %>
  <div id="favorite_<%= post.id %>">
    <% if current_user.liking?(post) %>
        <%= form_with(model: current_user.favorites.find_by(post_id: post.id), remote: true, method: :delete) do |f| %>
          <%= hidden_field_tag :post_id, post.id %>
          <%= button_tag(type: "submit", class: "btn btn-default like_button") do %>
            <i class="fas fa-bookmark fa-lg"></i>
          <% end %>
        <% end %>
    <% else %>
      <%= form_with(model: current_user.favorites.build, remote: true) do |f| %>
        <%= hidden_field_tag :post_id, post.id %>
        <%= button_tag(type: "submit", class: "btn btn-default like_button") do %>
          <i class="far fa-bookmark fa-lg"></i>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>

