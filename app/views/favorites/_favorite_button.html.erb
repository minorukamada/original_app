<div id="favorite_<%= post.id %>" class="favorite_button" data-toggle="tooltip" data-original-title="お気に入り" data-placement="right">
  <% if logged_in? %>
    <% if current_user.liking?(post) %>
      <%= form_with(model: current_user.favorites.find_by(post_id: post.id), remote: true, method: :delete) do |f| %>
        <%= hidden_field_tag :post_id, post.id %>
        <%= button_tag(type: "submit", class: 'btn btn-default unlike') do %>
          <i class="fas fa-heart fa-lg"></i>
        <% end %>
      <% end %>
    <% else %>
      <%= form_with(model: current_user.favorites.build, remote: true) do |f| %>
        <%= hidden_field_tag :post_id, post.id %>
        <%= button_tag(type: "submit", class: 'btn btn-default like') do %>
          <i class="far fa-heart fa-lg"></i>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>

