<div class="post_show p-2">
  <%= form_with(model: @post, local: true) do |f| %>
    <div class="form-group">
      <div class="pb-5">
        <%= f.label :title, "タイトル" %> <span class="badge badge-danger">必須</span>
        <%= f.text_field :title, placeholder: "タイトルを入力(50文字以内)", class: 'form-control' %>
      </div>
      <%=f.label :image,"サムネイル画像（選択しない場合、現在の画像が表示されます。）" %>
      <div class="post-image pb-5">
        <div class="trim-post-image-lg pb-2">
          <img id="aavatar_img_prev" src="#" class="hidden">
          <% if @post.image? %>
            <%= image_tag @post.image.url, class: 'aavatar_present_img' %>
          <% elsif %>
            <%= image_tag ('/no_post_image.png'), class: 'aavatar_present_img' %>
          <% end %>
        </div>
        <div>
          <p><%= f.file_field :image, id: 'apost_img' %></p>
          <p><%= f.check_box :remove_image %>画像を削除する</p>
        </div>
      </div>
      <div>
        <%= f.label :content, "本文" %> <span class="badge badge-danger">必須</span>
        <%= f.text_area :content, placeholder: "本文を入力(3000文字以内)", class: 'form-control', rows: 20 %>
      </div>
    </div>
    <div class="button-set">
      <%= link_to "キャンセル", :back, class: 'cancel-button'%>
      <%= f.submit '投稿する', class: 'submit-button' %>
    </div>
  <% end %>
</div>