<div class="row justify-content-center">
  <div class="col-md-6">
    
    <%= form_with(model: @post, local: true) do |f| %>
    
      <div class="form-group">
        <div class="p-2">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, placeholder: "タイトルを入力", class: 'form-control' %>
        </div>
        <div class="p-2">
          <%=f.label :image,"サムネイル画像" %>
          <div class="trim-post-image-lg">
            <img id="aavatar_img_prev" src="#" class="hidden">
            <% if @post.image? %>
              <%= image_tag @post.image.url, class: 'aavatar_present_img' %>
            <% elsif %>
              <%= image_tag ('/no_post_image.png'), class: 'aavatar_present_img' %>
            <% end %>
          </div>
          <div class="p-2">
            <%= f.file_field :image, id: 'apost_img' %>
            <%= f.check_box :remove_image %>画像を削除する
          </div>
        </div>
        
        <div class="p-2">
          <%= f.label :category, "カテゴリー" %>
          <div>
            <label><%= f.radio_button :category, "衣" %> 衣 </label>
            <label><%= f.radio_button :category, "食" %> 食 </label>
            <label><%= f.radio_button :category, "住" %> 住 </label>
            <label><%= f.radio_button :category, "その他" %> その他 </label>
          </div>
        </div>
        <div class="p-2">
          <%= f.label :content, "本文" %>
          <%= f.text_area :content, placeholder: "本文を入力", class: 'form-control', rows: 15 %>
        </div>
      </div>
      
      <div class="row justify-content-center p-2">
        <%= link_to "戻る", :back, class: 'btn btn-outline-secondary'%>
        <%= f.submit '投稿する', class: 'btn btn-primary ml-3' %>
      </div>
      
    <% end %>
    
  </div>
</div>