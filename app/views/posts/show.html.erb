<div class="row justify-content-center">
  <div class="col-md-6 post_show mt-3">
    <div class="d-flex">
      <%= render 'users/user_image', user: @post.user %>
      
      <div class="pl-1 post-title">
        
        <div class="d-flex justify-content-content">
        <p class="m-0">投稿者：<%= link_to @post.user.name, user_path(@post.user) %></p>
        
          <p class="m-0 ml-3">投稿日：<%= @post.created_at.in_time_zone("Tokyo").strftime("%Y/%m/%d %H:%M") %></p>
          <p class="m-0 ml-3"><i class="fas fa-heart fa-fw"></i><%= @post.favorites.count %></p>
          <p class="m-0 ml-3"><i class="far fa-comment fa-fw"></i><%= @post.comments.count %></p>
        </div>
        <!--<%= render 'favorites/favorite_button', post: @post %>-->
      </div>
      
    </div>
        
      
    <%= render 'posts/posts_button', post: @post %>
    <h5 class="mb-0"><%=@post.title %></h5>
    <p><%= simple_format @post.content %></p>

    
    
    <hr>
  
  <div class="mt-5">
    <%= render 'comments/form', post: @post, comment: @comment %>
    <%= render 'comments/index', comments: @comments %>
    
  

    
    
  </div>
  </div>
</div>
  